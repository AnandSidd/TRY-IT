<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_add_outfit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blackNavy"
    tools:context=".AddOutfitActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="87dp"
        android:id="@+id/imglayout">

        <ImageView
            android:id="@+id/imView_add_outfit"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" />
    </RelativeLayout>


    <Button
        android:id="@+id/button_searchGallery_add_outfit"
        android:layout_width="349dp"
        android:layout_height="47dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rounded"
        android:fontFamily="@font/roboto_bold"
        android:text="CLICK HERE TO ADD OUTFIT"
        android:textColor="@color/blackNavy"
        android:textSize="25dp"
        android:visibility="visible" />

    <Button
        android:id="@+id/button_insert_add_outfit"
        android:layout_width="94dp"
        android:layout_height="47dp"
        android:layout_alignEnd="@+id/button_searchGallery_add_outfit"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/rounded"
        android:fontFamily="@font/roboto_bold"
        android:text="Insert"
        android:textColor="@color/blackNavy"
        android:textSize="25dp"
        android:visibility="gone" />

    <SeekBar
        android:id="@+id/sensitivity_bar_add_outfit"
        android:layout_width="229dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="136dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="44dp"
        android:background="@android:color/holo_orange_dark"
        android:indeterminate="false"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/editbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="320dp"
        android:layout_marginTop="580dp"
        app:srcCompat="@android:drawable/ic_menu_edit"
        android:visibility="gone" />
    <include
        android:id="@+id/llProgressBar"
        android:visibility="gone"
        layout="@layout/activity_progress"/>

</RelativeLayout>